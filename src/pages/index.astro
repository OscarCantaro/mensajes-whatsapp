---
import Layout from '../layouts/Layout.astro';
import ExcelUploader from '../components/ExcelUploader';
import ExcelViewer from '../components/ExcelViewer';
import MessageEditor from '../components/MessageEditor';
import WhatsAppSender from '../components/WhatsAppSender';
---

<Layout title="WhatsApp Sender - EnvÃ­o Masivo de Mensajes">
  <section class="grid gap-8 md:grid-cols-2">
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold mb-4 text-gray-700 border-b pb-2">
        Cargar Contactos
      </h2>
      <ExcelUploader client:load />
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold mb-4 text-gray-700 border-b pb-2">
        Editor de Mensaje
      </h2>
      <MessageEditor client:load />
    </div>
  </section>

  <section class="mt-8 bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4 text-gray-700 border-b pb-2">
      Vista previa de datos
    </h2>
    <ExcelViewer client:load />
  </section>

  <section class="mt-8 bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4 text-gray-700 border-b pb-2">
      Enviar Mensajes
    </h2>
    <WhatsAppSender client:load />
  </section>
</Layout>