---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <header class="bg-whatsapp text-white p-4 shadow-md">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold">WhatsApp Sender</h1>
        <div>
          <span class="hidden md:inline">Env√≠o masivo de mensajes</span>
        </div>
      </div>
    </header>

    <main class="container mx-auto p-4 mt-6">
      <slot />
    </main>

    <footer class="bg-gray-100 border-t mt-10">
      <div class="container mx-auto p-4 text-center text-gray-500 text-sm">
        &copy; {new Date().getFullYear()} WhatsApp Sender | Desarrollado con Astro y React
      </div>
    </footer>
  </body>
</html>